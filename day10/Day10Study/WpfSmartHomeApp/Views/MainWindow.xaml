<Window x:Class="WpfSmartHomeApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:WpfSmartHomeApp.UserControls"
        xmlns:local="clr-namespace:WpfSmartHomeApp.Views"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:WpfSmartHomeApp.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True"
        x:Name="window"
        Title="MainWindow" Height="720" Width="1080"
        Dialog:DialogParticipation.Register="{Binding}"
        Loaded="window_Loaded"
        Closing="window_Closing">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Border Background="White"
            Padding="30"
            CornerRadius="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <!-- Menu -->
            <Border CornerRadius="10"
                    Background="#3253F1">
                <Border.Effect>
                    <DropShadowEffect ShadowDepth="1"
                                      BlurRadius="20"
                                      Opacity="0.4" />
                </Border.Effect>

                <Grid>
                    <StackPanel>
                        <Button Style="{StaticResource MenuButton}"
                                Margin="15,40,15,20"
                                Background="#FFFFFF">
                            <Image Source="/Images/_home2.png" Width="30"  />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_bed.png"
                                   Width="30" />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_users.png"
                                   Width="30" />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_shield.png"
                                   Width="30" />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_location.png"
                                   Width="30" />
                        </Button>

                        <Button Style="{StaticResource MenuButton}">
                            <Image Source="/Images/_chart.png"
                                   Width="30" />
                        </Button>
                    </StackPanel>

                    <Button Style="{StaticResource MenuButton}"
                            Margin="15,0,15,25"
                            VerticalAlignment="Bottom" Click="Button_Click" ToolTip="Log Out">
                        <Image Source="/Images/_logout.png"
                               Width="30"/>
                    </Button>
                </Grid>
            </Border>
            
            <!-- Page 1-->
            <Border x:Name="Page1" Style="{StaticResource BorderPage}">

                <Border CornerRadius="25">
                    <Border.Background>
                        <ImageBrush Stretch="Fill"
                                    Opacity="0.6"
                                    ImageSource="/Images/p2.jpg" />
                    </Border.Background>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <!-- Titles -->
                        <StackPanel VerticalAlignment="Center"
                                    Margin="60,0,0,0">
                            <TextBlock FontSize="22"
                                       Text="Controlling"
                                       Foreground="White" />

                            <TextBlock FontSize="36"
                                       FontWeight="Bold"
                                       Margin="0,10"
                                       Text="KWANHO's SmartHome"
                                       TextWrapping="Wrap"
                                       Foreground="White" />
                            
                            <TextBlock FontSize="25" FontWeight="SemiBold"
                                       Foreground="Azure"
                                       Text="{Binding CurrDateTime}" />

                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="32"
                                           Foreground="White" Margin="0,0,30,0">
                                    <Run Text="{Binding HomeTemp, StringFormat=F1}" FontWeight="Bold" Foreground="#EFCA32"/>
                                    <Run Text="℃" FontWeight="Thin" FontSize="26" />
                                
                                </TextBlock>
                                <TextBlock FontSize="32"
                                           Foreground="White">
                                    <Run Text="{Binding HomeHumid, StringFormat=F1}" FontWeight="SemiBold" Foreground="#7488DF"/><Run Text=" %"
                                                          FontWeight="Thin"
                                                          FontSize="26" />

                                                                </TextBlock> 
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Temperature"
                                           Foreground="White"
                                           FontSize="12"
                                           Margin="0,0,25,0" />
                                <TextBlock Text="Humidity"
                                           Foreground="White"
                                           FontSize="12"
                                           Margin="0,0,45,0" /> 
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- Panels -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="0,0,50,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                
                                <!-- Cards -->
                                <!-- Human Detection -->
                                <uc:Card Grid.Column="0"
                                         Grid.Row="0"
                                         Margin="0,0,8,8"
                                         Title="{Binding DetectResult}"
                                         ImageOff="/Images/detect_off.png"
                                         ImageOn="/Images/detect_on.png"
                                         IsChecked="{Binding IsDetectOn}"/>
                                <!-- Rain Detection -->
                                <uc:Card Grid.Column="1"
                                         Grid.Row="0"
                                         Margin="0,0,8,8"
                                         Title="{Binding RainResult}"
                                         ImageOff="/Images/rain_off.png"
                                         ImageOn="/Images/rain_on.png"
                                         IsChecked="{Binding IsRainOn}"/>

                                <uc:Card Grid.Column="0"
                                         Grid.Row="1"
                                         Margin="0,0,8,8"
                                         Title="{Binding AirConResult}"
                                         ImageOff="/Images/conditioner_off.png"
                                         ImageOn="/Images/conditioner_on.png"
                                         IsChecked="{Binding IsAirConOn}" />
                                <!-- Light -->
                                <uc:Card Grid.Column="1"
                                         Grid.Row="1"
                                         Margin="0,0,8,8"
                                         Title="{Binding LightResult}"
                                         ImageOff="/Images/light_off.png"
                                         ImageOn="/Images/light_on.png"
                                         IsChecked="{Binding IsLightOn}" />
                            </Grid>
                            
                            <!-- Add Button -->
                            <uc:AddButton Title="Add New Room" Grid.Column="1" Margin="0,50,0,0" HorizontalAlignment="Center" />
                        </StackPanel>
                    </Grid>
                </Border>
                
            </Border>
        </Grid>
    </Border>
</Window>
